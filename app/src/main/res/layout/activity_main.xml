<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonJocks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Latest Jocks"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/purple_700"
        android:gravity="center"/>

    <Button
        android:id="@+id/buttonGetNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Latest today News"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_below="@+id/buttonJocks"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/purple_700"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textViewJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:layout_below="@+id/buttonGetNews"
        android:textColor="@color/black"/>

</RelativeLayout>